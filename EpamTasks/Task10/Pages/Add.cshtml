@using Task10.Models
@using Users.Ioc;
@using Users.Entities;
@{
    Layout = "~/Layouts/_AdminLayout.cshtml";


    if (IsPost)
    {
        string name = Request.Form["name"];
        string image = Request.Form["image"];
        DateTime birthday = DateTime.Parse(Request.Form["birthday"]);
        var userLogic = DependencyResolver.UserLogic;
        userLogic.Add(new User()
        {
            Name = name,
            DateOfBirth = birthday
        });

    }
}
<div style="position:absolute; margin-top:100px;" class="p-3 mb-2 bg-dark text-white">
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" name="id" />
            <div class="form-group">
                <label for="name">Name</label>
                <input required id="name" class="form-control" name="name" />
            </div>
            <div class="form-group">
                <label for="photo">Photo</label>
                <div>         
                    <img style="width:50px;height:50px;" src="~/Images/thumbs/thumbnail.jpg" alt="image" />             
                    <input type="file" style="width:130px;" accept="image/*" name="image" />
                </div>
            </div>
            <div class="form-group">
                <label for="birthday">Birthday</label>
                <input required type="date" id="birthday" class="form-control" name="birthday" />
            </div>
            <div class="form-group">
                <label for="awards">Awards</label>         
            </div>
            <div class="text-center">
                <button class="btn btn-primary" type="submit">Save</button>
            </div>
        </form>
 </div>
